{
	"server": {
		"addr": "",
		"port": 8080,
		"production_mode": false,
		"secure_mode": false,
		"cert_file": "",
		"key_file": "",
		"session_timeout": 10,
		"session_maxage": 30
	},
	"limits": {
		"max_cpu": 1,
		"max_memory_mbytes": 128,
		"max_ingest_sessions": 10,
		"max_ingest_bandwidth_kbit": 10000,
		"rate_limit_enable": true,
		"rate_limit_ingest_window": 15,
		"rate_limit_ingest_sessions_per_source": 100,
		"rate_limit_ingest_requests_per_session": 30000,
		"rate_limit_ingest_bytes_per_source": 134217728
	},
	"auth": {
		"enabled": false,
		"token_secret": ""
	},
	"ingest": {
		"avc": true,
		"ts": true,
		"chunk": false
	},
	"transcode": {
		"command": "/usr/local/bin/ffmpeg",
		"log_path": "./data/log",
		"output_path": "./data",
		"hls": {
			"enabled": true,
			"segment_length": 2
		},
		"dash": {
			"enabled": false,
			"segment_length": 2
		},
		"mp4": {
			"enabled": true
		},
		"ogg":  {
			"enabled": true
		},
		"webm":  {
			"enabled": true
		},
		"thumb":  {
			"enabled": true,
			"size": "160x90",
			"step": 2
		},
		"poster":  {
			"enabled": true,
			"size": "auto",
			"count": 1,
			"skip": 10,
			"step": 0
		}
	}
}
